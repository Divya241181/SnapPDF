# Copy this file to .env and fill in your values

# Server
PORT=5000

# MongoDB — local dev
MONGODB_URI=mongodb://127.0.0.1:27017/pdfmaker

# JWT — use a long random string (min 32 chars) in production
JWT_SECRET=replace_with_a_very_long_random_secret_string_min_32_chars

# Your deployed frontend URL (for CORS in production)
# Example: https://my-pdf-maker.vercel.app
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your_id_here
GOOGLE_CLIENT_SECRET=your_secret_here